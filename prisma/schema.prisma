datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(uuid())
  nome    String
  telefone   String   @unique
  email      String?  
  dataCriacao  DateTime @default(now())
  gastos  Gasto[]
}

model Gasto {
  id        String   @id @default(uuid())
  valor     Float
  descricao String?
  data      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
